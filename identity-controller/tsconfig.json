{
  "compilerOptions": {
    "declaration": true,
    "module": "commonjs",
    "noImplicitAny": true,
    "removeComments": true,
    "preserveConstEnums": true,
    "strictPropertyInitialization": false,
    "sourceMap": true,
    "target": "es2017",
    "lib": ["es2017"],
    "strict": true
  },
  "include": ["src/*.ts"],
  "exclude": ["node_modules", "dist", "**/tests"]
}
